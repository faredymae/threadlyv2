<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"> <!-- Hide the scrollbar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/post_background"
        android:padding="15dp"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:clipToPadding="false">

        <!-- Post Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- User Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/imageProfilePicture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top"
                    android:src="@drawable/ic_default_pfp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="12dp" />

                <!-- User Info (Full Name and Handle) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Ky Yanga"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textHandle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_kylamaeee"
                        android:textColor="#38343a"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Created At -->

            </LinearLayout>

            <!-- Post Title, Body, and Interaction Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Post Title -->
                <TextView
                    android:id="@+id/textPostTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!-- Post Body -->
                <TextView
                    android:id="@+id/textPostBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="2dp"
                    android:text="empore incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam."
                    android:textColor="#38343a" />

                <!-- Interaction Row (Likes and Comments aligned horizontally) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13dp"
                    android:gravity="start">

                    <!-- Likes Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:id="@+id/likeButton"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_unlike" />

                        <TextView
                            android:id="@+id/textLikeCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:text="12"
                            android:textColor="#38343a" />
                    </LinearLayout>

                    <!-- Comments Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icc_comment" />

                        <TextView
                            android:id="@+id/textComments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:text="10"
                            android:textColor="#38343a" />




                    </LinearLayout>

                    <TextView
                        android:id="@+id/textCreatedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="190dp"
                    android:text="10"
                    android:textColor="@color/lightgrey" />




                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
